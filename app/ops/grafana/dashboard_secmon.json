

{
  "title": "Sec-Mon Demo",
  "schemaVersion": 36,
  "version": 1,
  "timezone": "browser",
  "panels": [
    {
      "type": "timeseries",
      "title": "Latency p50/p90",
      "targets": [
        { "expr": "histogram_quantile(0.5, sum by (le) (rate(request_latency_seconds_bucket[5m])))" },
        { "expr": "histogram_quantile(0.9, sum by (le) (rate(request_latency_seconds_bucket[5m])))" }
      ],
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Z-score anomalies (5m)",
      "targets": [
        { "expr": "sum(increase(zscore_anomaly_total[5m]))" }
      ],
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Quarantined IPs",
      "targets": [
        { "expr": "quarantined_ip_count" }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 9 }
    }
  ]
}